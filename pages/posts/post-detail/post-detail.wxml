<view class='container'>
  <image class='head-image' src='{{postData.imgSrc}}'></image>
  <image class='audio' src='/images/music/music-start.png'></image>
  <view class='author-date'>
    <image class='avatar' src='{{postData.avatar}}'></image>
    <text class='author'>{{postData.author}}</text>
    <text class='const-text'>发表于</text>
    <text class='date'>{{postData.date}}</text>
  </view>
  <text class='title'>{{postData.title}}</text>
  <view class='tool'>
    <view class='circle-img'>
      <text wx:if='{{collected}}' catchtap='onCollectionTap' class='icon-back shoucang-back'>
        <text class='iconfont icon-shoucang1'></text>
      </text>
      <text wx:else='{{collected}}' catchtap='onCollectionTap' class='icon-back weishoucang-back'>
        <text class='iconfont icon-shoucang1'></text>
      </text>
      <text catchtap='onShareTap' class='icon-back fenxiang-back'>
        <text class='iconfont icon-fenxiang'></text>
      </text>
    </view>
    <view class='horizon'></view>
  </view>
  <text class='detail'>{{postData.detail}}</text>
</view>
