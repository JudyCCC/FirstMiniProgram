<import src="post-item/post-item-template.wxml" />
<view>
  <swiper indicator-dots='true' autoplay='true'>
    <swiper-item><image src='/images/wx.jpeg'></image></swiper-item>
    <swiper-item><image src='/images/dj.jpeg'></image></swiper-item>
    <swiper-item><image src='/images/tg.jpeg'></image></swiper-item>
  </swiper>
  <block wx:for="{{posts_content}}" wx:for-item="item" wx:for-index="index">
    <!-- template -->
    <view catchtap="onPostTap" data-postid="{{item.postId}}">
      <template is="postItem" data="{{...item}}"/>
    </view>
  </block>
</view>